<!doctype html>
<html lang="{% if config.language|length > 0 %}{{ config.language }}{% else %}en{% endif %}">
  <head>
    <meta charset="utf-8">
    <title>{% if page_title is defined and page_title is not empty %}{{ page_title }} | {{ config.siteName|capitalize }}{% else %}Minicraft{% endif %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ url('assets', 'js/select2/select2.css') }}">
    <link rel="stylesheet" href="{{ url('assets', 'js/select2/select2-bootstrap.css') }}">
    <link rel="stylesheet" href="{{ url('assets', 'css/style.css') }}">
    <link rel="icon" type="image/png" href="/favicon.png">
    <!-- HTML5 shiv -->
    <!--[if lt IE 9]>
      <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    
    <div class="container">
    
      <div class="row">
      
        <div class="col-md-12">
          
          {% include 'includes/flash.twig' %}
          
          {% if server is defined and server is not empty %}
          <form role="form" method="post" action="{{ url('action', 'servers', 'edit-server') }}-{{ server.id }}">
            <div class="form-group">
              <label for="server-title">Name</label>
              <input type="text" name="server-name" id="server-name" class="form-control" placeholder="Enter title" value="{{ server.name }}">
            </div>
            <div class="form-group">
              <label for="server-ip">IP or address</label>
              <input type="text" name="server-ip" id="server-ip" class="form-control" placeholder="Enter ip" value="{{ server.ip }}">
            </div>
            <div class="form-group">
              <label for="server-description">Description</label>
              <input type="text" name="server-description" id="server-description" class="form-control" placeholder="Enter desc" value="{{ server.description }}">
            </div>
            <div class="form-group">
              <label for="server-type">Type</label>
              <select name="server-type" id="server-type" class="form-control">
                {% for type in types %}
                <option value="{{ type.id }}" {% if type.id == server.serverType.id %}selected{% endif %}>{{ type.name }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="form-group">
              <label for="server-jsonapi-port">jsonapi port</label>
              <input type="text" name="server-jsonapi-port" id="server-jsonapi-port" class="form-control" placeholder="Enter jsonapi port" value="{{ server.jsonapiPort }}">
            </div>
            <div class="form-group">
              <label for="server-jsonapi-username">jsonapi username</label>
              <input type="text" name="server-jsonapi-username" id="server-jsonapi-username" class="form-control" placeholder="Enter jsonapi username" value="{{ server.jsonapiUsername }}">
            </div>
            <div class="form-group">
              <label for="server-jsonapi-password">jsonapi password</label>
              <input type="text" name="server-jsonapi-password" id="server-jsonapi-password" class="form-control" placeholder="Enter jsonapi password" value="{{ server.jsonapiPassword }}">
            </div>
            
            <div class="form-group">
              <button type="submit" class="btn btn-default">Save</button>
            </div>
          </form>
          {% else %}
          <p>No server to showâ€¦</p>
          {% endif %}
          
          <hr>
        
        </div>  <!-- /.col-md-12 -->
      
      </div> <!-- /.row -->
    
    </div> <!-- /.container -->

    <!-- Javascript -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="{{ url('assets', 'js/select2/select2.js') }}"></script>
    <script src="{{ url('assets', 'js/select2/select2_locale_fr.js') }}"></script>
    <script>
      $(document).ready(function() { $("#server-type").select2(); });
    </script>
  </body>
</html>
