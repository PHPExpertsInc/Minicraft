{% extends 'includes/global_layout.twig' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      {% include 'includes/flash.twig' %}  
      <form method="post" action="{{ currentUri }}" role="form">
        <div class="form-group{% if handler.errors.username %} has-error{% endif %}">
          <label class="control-label" for="login-username">{{ lang('USERNAME') }}</label>
          <input id="login-username" class="form-control" type="text" name="login[username]"{% if handler.errors.username  is empty %} value="{{ handler.savedField('username') }}"{% endif %}{% if handler.loginFocusUsername %} autofocus{% endif %}>
          {% if handler.errors.username %}<span class="help-block">{{ handler.errorMessages.username }}</span>{% endif %}
        </div>
        <div class="form-group{% if handler.errors.password %} has-error{% elseif handler.errors.username %} has-warning{% endif %}">
          <label class="control-label" for="login-password">{{ lang('PASSWORD') }}</label>
          <input id="login-password" class="form-control" type="password" name="login[password]"{% if handler.loginFocusPassword %} autofocus{% endif %}>
          {% if handler.errors.password %}<span class="help-block">{{ handler.errorMessages.password }}</span>{% endif %}
        </div>
        <div class="checkbox">
          <label><input type="checkbox" name="login[cookie]"{% if handler.savedField('cookie') is not empty %} checked{% endif %}>{{ lang('STAY_LOGGED_IN') }}</label>
        </div>
        <button type="submit" class="btn btn-block btn-primary">{{ lang('BTN_LOGIN') }}</button>
      </form>
    </div> <!-- .col-md-6 -->
  </div> <!-- .row -->
</div> <!-- .container -->
{% endblock %}