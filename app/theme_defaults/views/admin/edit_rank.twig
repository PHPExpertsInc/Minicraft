{% extends 'includes/global_layout.twig' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      {% include 'includes/flash.twig' %}
      <form role="form" method="post" action="{{ url('action', 'ranks', 'edit-rank') }}-{{ rank.id }}">
        <div class="form-group">
          <label for="rank-name">{{ lang('RANK_NAME') }}</label>
          <input id="rank-name" class="form-control" type="text" name="add-rank[name]" value="{{ rank.name }}">
        </div>
        <div class="form-group">
          <label for="rank-force">{{ lang('RANK_FORCE') }}</label>
          <input id="rank-force" class="form-control" type="number" name="add-rank[force]" value="{{ rank.force }}">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default">{{ lang('BTN_SAVE') }}</button>
        </div>
      </form>
    </div>  <!-- /.col-md-6 -->
  </div> <!-- /.row -->
</div> <!-- /.container -->
{% endblock %}