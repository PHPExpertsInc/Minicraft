{% extends 'includes/global_layout.twig' %}
{% block content %}
{{ parent() }}
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      {% include 'includes/flash.twig' %}
      <form method="post" action="{{ url('reset') }}" role="form">
        <div class="form-group{% if error_username %} has-error{% endif %}">
          <label class="control-label" for="username">{{ lang('USERNAME_OR_EMAIL') }}</label>
          <input type="text" name="account" class="form-control" id="username"{% if saved_username|length > 0 %} value="{{ saved_username }}"{% elseif focus_username %} autofocus{% endif %}>
        </div>
        <button type="submit" class="btn btn-block btn-primary">{{ lang('BTN_RESET') }}</button>
      </form>
    </div> <!-- .col-md-6 -->
  </div> <!-- .row -->
</div> <!-- .container -->
{% endblock %}