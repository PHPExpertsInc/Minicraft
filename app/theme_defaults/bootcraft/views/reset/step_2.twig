{% extends 'includes/global_layout.twig' %}
{% block content %}
{{ parent() }}
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      {% include 'includes/flash.twig' %}
      <form method="post" action="{{ url('reset_token') ~ '?' ~ {'token': token}|url_encode }}" role="form">
        <div class="form-group{% if error_password %} has-error{% endif %}">
          <label class="control-label" for="password1">{{ lang('NEW_PASSWORD') }}</label>
          <input type="password" name="password1" class="form-control" id="password1"{% if focus_password %} autofocus{% endif %}>
        </div>
        <div class="form-group{% if error_password %} has-error{% endif %}">
          <label class="control-label" for="password2">{{ lang('CONFIRM_PASSWORD') }}</label>
          <input type="password" name="password2" class="form-control" id="password2"{% if focus_password %} autofocus{% endif %}>
        </div>
        <button type="submit" class="btn btn-block btn-primary">{{ lang('BTN_SAVE') }}</button>
      </form>
    </div> <!-- .col-md-6 -->
  </div> <!-- .row -->
</div> <!-- .container -->
{% endblock %}