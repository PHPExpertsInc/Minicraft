{% extends 'includes/global_layout.twig' %}
{% block content %}
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      {% include 'includes/flash.twig' %}
      <div class="box box-orange">
        <form method="post" action="{{ currentUri }}" role="form">
          <div class="form-group">
            <label class="control-label" for="password1">{{ lang('NEW_PASSWORD') }}</label>
            <input id="password1" class="form-control" type="password" name="password1">
          </div>
          <div class="form-group">
            <label class="control-label" for="password2">{{ lang('CONFIRM_PASSWORD') }}</label>
            <input id="password2" class="form-control" type="password" name="password2">
          </div>
          <button type="submit" class="btn btn-block btn-primary">{{ lang('BTN_SAVE') }}</button>
        </form>
      </div>
    </div> <!-- .col-md-6 -->
  </div> <!-- .row -->
</div> <!-- .container -->
{% endblock %}